@model ProductivityApp.Controllers.TemplateController.TemplateViewModel
<div class="container">
    <form method="POST"> 
        <div class="row">
            <h1>Create a new template</h1>
        </div>
        <div class="form-group">
                <label>Name your workflow:</label>
                <input class="form-control" type="text" name="name" value="@Model.name" />
                <label>Describe your workflow:</label>
                <input class="form-control" type="text" name="Description" value="@Model.description" />
        </div>
        <div class="form-group">
            <input type="file" name="files" value ="@Model.files" multiple>
        </div>
        <button type="submit">Submit</button>
    </form>
</div>
