@model Flow
<div class="container">
    <form method="POST"> 
        <div class="row">
            <h1>Create a new template</h1>
        </div>
        <div class="form-group">
                <label>Name your workflow:</label>
                <input class="form-control" type="text" name="nameOfFlow" value="@Model.name" />
                <label>Describe your workflow:</label>
                <input class="form-control" type="text" name="descriptionOfFlow" value="@Model.Description" />
        </div>
        <div class="form-group">
            <input type="file" name="files" multiple>
        </div>
        <a class="btn btn-sm btn-success"><span class="glyphicon glyphicon-pencil"></span> Complete Template</a>
    </form>
</div>
